<img 
{% if inline is defined -%}
    src="data:image/png;base64,{{base64}}"
	{% else -%}
	src="{{src}}"	
{%- endif %}
 alt="{{alt}}" 
{% if title is defined -%}
    title="{{title}}"
{%- endif %}
{% if align is defined -%}
	{% if align == "right" -%}
		style="float:right"
	{% elif align == "left" -%}
		style="float:left"
	{% else -%}
		style="margin: auto;display: block;"
	{%- endif %}
{%- endif %}
/>