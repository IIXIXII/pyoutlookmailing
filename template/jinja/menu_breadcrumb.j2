{%- if breadcrumb_prepared is defined -%}
{%- if breadcrumb_prepared.steps|length >1 -%}
        {%- for step in breadcrumb_prepared.steps %}
                <li {% if step.active is not none -%} class="active" {% endif -%}><a href="{{step.url}}">{{step.name}}</a></li>
        {%- endfor %}
{%- endif -%}
{%- endif -%}
